<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="software.is.com.myapplication.activity.CommentHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/et_commentContent"
            android:background="@drawable/round"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="@dimen/abc_text_size_body_2_material"
            android:paddingRight="@dimen/abc_text_size_body_2_material"
            android:paddingStart="@dimen/abc_text_size_body_2_material"
            android:paddingEnd="@dimen/abc_text_size_body_2_material"
            android:textSize="14sp"
            android:lines="2"
            android:inputType="textMultiLine"
            android:hint="แสดงความคิดเห็น..."
            android:layout_weight="0.38" />

        <Button
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:textSize="10dp"
            android:text="Post"
            android:background="@color/blue_100"
            android:id="@+id/bt_addComment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/all_comment"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/empty"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="ยังไม่มีข้อมูล"/>
</LinearLayout>
